/*Map Remote -подмена хостов (переадресация запросов с одного хоста на другой)*/

<?xml version='1.0' encoding='UTF-8' ?>
<?charles serialisation-version='2.0' ?>
<charles-export>
  <toolConfiguration>
    <configs>
      <entry>
        <string>Map Remote</string>
        <map>
          <toolEnabled>true</toolEnabled>
          <mappings>
            <mapMapping>
              <sourceLocation>
                <protocol>https</protocol>
                <host>by.wildberries.ru</host>
                <path>/</path>
              </sourceLocation>
              <destLocation>
                <protocol>https</protocol>
                <host>yandex.by</host>
                <path>/</path>
              </destLocation>
              <preserveHostHeader>false</preserveHostHeader>
              <enabled>false</enabled>
            </mapMapping>
            <mapMapping>
              <sourceLocation>
                <protocol>https</protocol>
                <host>yandex.by</host>
                <path>/</path>
              </sourceLocation>
              <destLocation>
                <protocol>https</protocol>
                <host>by.wildberries.ru</host>
                <path>/</path>
              </destLocation>
              <preserveHostHeader>false</preserveHostHeader>
              <enabled>true</enabled>
            </mapMapping>
          </mappings>
        </map>
      </entry>
    </configs>
  </toolConfiguration>
</charles-export>
